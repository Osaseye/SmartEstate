rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Refined rules for payments
    match /payments/{imageId} {
      allow create: if request.auth != null && request.resource.size < 5 * 1024 * 1024; // Max 5MB
      allow read: if request.auth != null;
    }
    
    // Refined rules for maintenance
    match /maintenance/{imageId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null;
    }
  }
}
